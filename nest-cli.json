{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/ecommerce-backend-project-microservice/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/ecommerce-backend-project-microservice/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/ecommerce-backend-project-microservice",
  "projects": {
    "cart": {
      "type": "application",
      "root": "apps/cart",
      "entryFile": "main",
      "sourceRoot": "apps/cart/src",
      "compilerOptions": {
        "tsConfigPath": "apps/cart/tsconfig.app.json"
      }
    },
    "ecommerce-backend-project-microservice": {
      "type": "application",
      "root": "apps/ecommerce-backend-project-microservice",
      "entryFile": "main",
      "sourceRoot": "apps/ecommerce-backend-project-microservice/src",
      "compilerOptions": {
        "assets": [
          "**/*.proto"
        ],
        "tsConfigPath": "apps/ecommerce-backend-project-microservice/tsconfig.app.json"
      }
    },
    "order": {
      "type": "application",
      "root": "apps/order",
      "entryFile": "main",
      "sourceRoot": "apps/order/src",
      "compilerOptions": {
        "tsConfigPath": "apps/order/tsconfig.app.json"
      }
    },
    "product": {
      "type": "application",
      "root": "apps/product",
      "entryFile": "main",
      "sourceRoot": "apps/product/src",
      "compilerOptions": {
        "tsConfigPath": "apps/product/tsconfig.app.json"
      }
    },
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "apps/user/src",
      "compilerOptions": {
        "assets": [
          "**/*.proto"
        ],
        "tsConfigPath": "apps/user/tsconfig.app.json"
      }
    }
  }
}